<%- include('../partials/header', { pageTitle: "VIVA VVIT - Register", user: user}) -%>

<style>
    td, th {
        text-align: center;
    }
</style>

<div class="container">
    <table class="table table-striped table-bordered mt-5">
        <tr>
            <th colspan="2">Your Profile</th>
        </tr>
        <tr>
            <th>Name</th>
            <td><%= user.name %></td>
        </tr>

        <tr>
            <th>Email</th>
            <td><%= user.username %></td>
        </tr>

        <tr>
            <th>Phone</th>
            <td><%= user.phone %></td>
        </tr>

        <tr>
            <th>College</th>
            <td><%= user.college %></td>
        </tr>

        <tr>
            <th>Branch</th>
            <td><%= user.branch %></td>
        </tr>
        <tr>
            <td colspan="2">
                <a href="/profile/edit/" class="btn btn-primary">Edit</a>

                <form action="/profile?_method=DELETE" method="post" class="d-inline">
                    <button type="submit" class="btn btn-danger">Delete</button>
                </form>
            </td>
        </tr>
    </table>
</div>