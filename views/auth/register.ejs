<%- include('../partials/header', { pageTitle: "VIVA VVIT - Register", user: user}) -%>

<div class="container">
    <div class="border p-5">
        <h1 class="lead display-4 mb-5 text-center">Register</h1>

        <form action="/auth/register" method="post">
            <div class="mt-5 mb-3">
                <label for="email" class="form-label">Email ID</label>
                <input type="text" class="form-control" name="username" id="email" placeholder="Enter your email id" required>
            </div>

            <div class="mt-3 mb-3">
                <label for="name" class="form-label">Full Name</label>
                <input type="text" class="form-control" name="name" id="name" placeholder="Enter your Full name" required>
            </div>

            <div class="mt-3 mb-3">
                <label for="phone" class="form-label">Phone number</label>
                <input type="tel" class="form-control" name="phone" id="phone" placeholder="Enter your Phone no" required>
            </div>

            <div class="mt-3 mb-3">
                <label for="college" class="form-label">College</label>
                <input type="text" class="form-control" name="college" id="college" placeholder="Enter your college name" required>
            </div>

            <div class="mt-3 mb-3">
                <label for="branch" class="form-label">Branch</label>
                <input type="text" class="form-control" name="branch" id="branch" placeholder="Enter your Branch" required>
            </div>

            <div class="mt-3 mb-3">
                <label for="password" class="form-label">Password</label>
                <input type="password" class="form-control" name="password" id="password" placeholder="Enter password" required>
            </div>

            <span class="d-flex justify-content-center">
                <button type="submit" class="btn btn-primary">Register</button>
            </span>
        </form>
    </div>
</div>

<%- include('../partials/footer') -%>