<%- include('../partials/header', { pageTitle: "VIVA VVIT - Create Event", user: user}) -%>

    <div class="container">
        <h1 class="lead display-4">Create Event</h1>

        <form 

        <% if(operation == "edit") { %> 
            action="/events/<%= event.id %>?_method=PUT"
        <% } else { %>
            action="/events/new" 
        <% } %>

        method="post"
        >
            <div class="mt-5 mb-3">
                <label for="name" class="form-label">Name</label>
                <input type="text" class="form-control" name="title" id="name" placeholder="Enter event name" value="<%= event.title %>">
            </div>

            <div class="mb-3">
                <label for="image" class="form-label">Banner</label>
                <!-- <input type="file" class="form-control" id="image" placeholder="Banner Image"> -->
                <input type="url" class="form-control" name="image" class="image" id="image" placeholder="Enter URL of Banner Image" value="<%= event.image %>">
            </div>

            <div class="mb-3">
                <label for="description" class="form-label">Description</label>
                <textarea id="description" class="form-control" name="description" rows="10"><%= event.description %></textarea>
            </div>

            <div class="mb-3">
                <label for="type" class="form-label">Type</label>
                <div class="form-check">
                    <input class="form-check-input" type="radio" name="type" value="1" id="technical" 
                        <% if (event.type == 1) { %> 
                            checked 
                        <% } %>
                     >
                    <label class="form-check-label" for="technical">
                        Technical
                    </label>
                </div>
                <div class="form-check">
                    <input class="form-check-input" type="radio" name="type" value="0" id="non-technical"  <% if (!event.type) { %> checked <% } %> >
                    <label class="form-check-label" for="non-technical">
                        Non-Technical
                    </label>
                </div>
            </div>

            <div class="mb-10">
                <button type="submit" class="btn btn-primary">Submit</button>
            </div>
        </form>
    </div>

    <%- include('../partials/footer') -%>